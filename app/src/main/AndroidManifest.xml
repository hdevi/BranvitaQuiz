<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mickey.himan.brainvitaquiz">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/quizwiz"
        android:label="@string/app_name"
        android:roundIcon="@drawable/quizwiz"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity"
            android:label="@string/home_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>

            <category android:name="android.intent.category.DEFAULT"/>
        </intent-filter>
        </activity>
        <activity android:name=".QuizActivity"
            android:label="@string/quiz_name"/>
        <activity android:name=".CheatActivity"
            android:label="@string/cheat_name"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".ScoreActivity"
            android:label="@string/score_name"
            android:configChanges="orientation|screenSize"></activity>
    </application>

</manifest>